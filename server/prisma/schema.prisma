datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model EmployeeDetail {
  createdAt DateTime @default(now())
  empName   String
  empSalary Int
  id        String   @id @default(cuid())
  manager   String?
  updatedAt DateTime @updatedAt
}

model ProjectManager {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  pmName    String
  pmSalary  String?
  updatedAt DateTime @updatedAt
}